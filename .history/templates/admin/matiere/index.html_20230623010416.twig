{% extends 'base.html.twig' %}

{% block title %}matiere index{% endblock %}

{% block body %}
<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>ALL matiere</h2>
            <small>Taken from <a href="https://datatables.net/" target="_blank">datatables.net</a></small>
        </div>
        
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="header">
                        <h2>All Directeur </h2>
                        <ul class="header-dropdown">
                            <li class="dropdown"> <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <i class="zmdi zmdi-more-vert"></i> </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="javascript:void(0);">Action</a></li>
                                    <li><a href="javascript:void(0);">Another action</a></li>
                                    <li><a href="javascript:void(0);">Something else here</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <a type="button" href="{{ path('admin_matiere_ajouter') }}" class="btn btn-raised btn-primary waves-effect" style="margin-left:80%">+Ajouter une matiere</a>
        
                    <div class="body table-responsive">
                            <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Code</th>
                                        <th>Libelle</th>
                                        <th>Professeur</th>
                                        <th>actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for matiere in matieres %}
                                    <tr>
                                        <td>{{ loop.index }}</td>
                                        <td>{{ matiere.code }}</td>
                                        <td>{{ matiere.libelle }}</td>
                                        <td>{{ matiere.professeur.nom }} - {{ matiere.Professeur.prenom }}  </td>

                                        
                                        <div class="col-sm-12" >
                                            <td style="display: flex;" >
                                                <a class="btn btn-success" style="margin-left: 20px; margin-right:20px"  href="{{ path('admin_matiere_show', {'id': matiere.id}) }}"><strong style="color: white;">voir</strong></a>
                                                <a  href="{{ path('admin_matiere_modifier', {'id': matiere.id}) }}" style="margin-right: 20px;" class="btn btn-secondary"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                                                    <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z"/>
                                                </svg></a>
                                                
                                                {{ include('admin/matiere/_delete_form.html.twig') }}

                                            </td>
                                        </div>    
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="4">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </tbody>
                    </table>
            </div>
        </div>
    </div>
</div>
<!-- #END# Exportable Table --> 
</div>
</section>        

                        
{% endblock %}
