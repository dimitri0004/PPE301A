{% extends 'base.html.twig' %}

{% block title %}listee des Directeurs{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <section class="content">
        <div class="container-fluid">
            <div class="block-header">
                <h2>Tout Les  Directeurs</h2>
                <small>Taken from <a href="https://datatables.net/" target="_blank">datatables.net</a></small>
            </div>
            
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="card">
                        <div class="header">
                            <h2> Directeur </h2>
                            <ul class="header-dropdown">
                                <li class="dropdown"> <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <i class="zmdi zmdi-more-vert"></i> </a>
                                    <ul class="dropdown-menu pull-right">
                                        <li><a href="javascript:void(0);">Action</a></li>
                                        <li><a href="javascript:void(0);">Another action</a></li>
                                        <li><a href="javascript:void(0);">Something else here</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <a type="button" href="{{ path('admin_directeur_ajouter') }}" class="btn btn-raised btn-primary waves-effect" style="margin-left:80%">+Ajouter un Directeur</a>
                        
                        <div class="body table-responsive">
                            <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Profil</th>
                                        <th scope="col">Nom</th>
                                        <th scope="col">Prenom</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">UserName</th>
                                        <th scope="col">Password</th>
                                        <th scope="col">Sexe</th>
                                        <th scope="col">Fonction</th>
                                        <th scope="col">Numero</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>                            
                                <tbody>
                                    {% for liste in listes.data %}
                                        <tr>
                                            <th scope="row">{{ loop.index }}</th>
                                            <td><img class="bd-placeholder-img rounded-circle" src="{{ asset('images/users/') ~ liste.imageName  }}" width="60" height="60" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="var(--bs-secondary-color)"/></img></td>
                                            <td>{{ liste.nom }}</td>
                                            <td>{{ liste.prenom }}</td>
                                            <td>{{ liste.email }}</td>
                                            <td>{{ liste.username }}</td>
                                            <td>{{ liste.security }}</td>
                                            <td>{{ liste.sexe }}</td>
                                            <td><button class="btn bg-orange waves-effect" type="button">{{ liste.fonction }} <span class="badge">{{ nombre }}</span></button></td> 
                                            <td>{{ liste.numero }}</td>
                                            <td>
                                                
                                                <a  href="{{ path('admin_directeur_modifier',{'username': liste.username }) }}" class="btn btn-secondary"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                                                    <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z"/>
                                                </svg></a>
                                                <a  onclick="return confirm('Voulez-vous vraiment supprimer cet utilisateur ?')"  class="btn  btn-danger" style="color:black"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                                                </svg></a>
                                            </td>
                                            
                                        </tr>
                                    {% endfor %}
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #END# Exportable Table --> 
            <div class="page-header">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="page-sub-header" style="margin-left:400px ;">
                            {% set path ='admin_directeur_liste' %}
                            {% set pages =listes.pages %} 
                            {% set currentPage =listes.page %}
                            {% include "_partiels/paginated.html.twig" %} 
                
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>    


            

        
                        
                    
{% endblock %}
