{% extends 'base.html.twig' %}

{% block title %}Ajouter Directeurs{% endblock %}

{% block body %}

{% for message in app.flashes('success') %}
<div class="alert alert-success">
    {{ message }}
</div>
{% endfor %}

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>Add Director</h2>
            <small class="text-muted">Welcome to Swift application</small>
        </div>

        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="header">
                        <h2>Basic Information <small>Enter your information...</small> </h2>
                        <ul class="header-dropdown m-r--5">
                            <li class="dropdown"> <a href="javascript:void(0);" class="dropdown-toggle"
                                    data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i
                                        class="zmdi zmdi-more-vert"></i></a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="javascript:void(0);" class=" waves-effect waves-block">Action</a></li>
                                    <li><a href="javascript:void(0);" class=" waves-effect waves-block">Another
                                            action</a></li>
                                    <li><a href="javascript:void(0);" class=" waves-effect waves-block">Something else
                                            here</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <a type="button" href="{{ path('admin_directeur_liste') }}"
                        class="btn  btn-raised btn-warning waves-effect" style="margin-left: 80%;">List Of
                        Directors</a>
                    {% if form_errors(form.security) %}
                    <div class="alert alert-danger">
                        {{ form_errors(form.security) }}
                    </div>
                    {% endif %}
                    {{ form_start(form, {'attr':{'class':'body'}})}}

                    <div class="row clearfix">
                        <div class="col-md-6 col-sm-12">
                            <div class="form-group">
                                <div class="form-line">
                                    {{ form_row(form.nom, {'attr':{type:"text"  ,'class':"form-control" ,'placeholder':"LastName" , 'require':""}})
                                    }}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <div class="form-group">
                                <div class="form-line">
                                    {{ form_row(form.prenom, {'attr':{'class':"form-control" ,'placeholder':"FirstName" ,'require':"", 'label':'FirstName*'}})
                                    }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-md-6 col-sm-12">
                            <div class="form-group">
                                <div class="form-line">
                                    {{ form_row(form.email, {'attr':{'class':"form-control", 'placeholder':"example@gmail.com", 'require':"", 'label':'Email*'}})
                                    }}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <div class="form-group">
                                <div class="form-line">
                                    {{ form_row(form.numero, {'attr':{'class':"form-control", 'placeholder':"Number", 'require':"", 'label':'Number*'}})
                                    }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-md-4 col-sm-12">
                            <div class="form-group">
                                <div class="form-line">
                                    {{ form_row(form.username, {'attr':{type:"text"  ,'class':"form-control" ,'placeholder':"UserName" , 'require':""}})
                                    }}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12">
                            <div class="form-group">
                                <div class="form-line">
                                    {{ form_row(form.plainPassword, {'attr':{'class':"form-control" ,'placeholder':"***********" ,'require':"", 'label':'Prenom*'}})
                                    }}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12">
                            <div class="form-group">
                                <div class="form-line">
                                    {{ form_row(form.security, {'attr':{'class':"form-control" ,'placeholder':"***********" ,'require':"", 'label':'ConfirmPassword*'}})
                                    }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-md-6 col-sm-12">
                            <div class="form-group">
                                <div class="form-line">
                                    {{ form_row(form.dateNaissance, {'attr':{'class':'form-control','placeholder':"dd/mm/yyyy", 'require':"", 'label':'Birthday*'}})
                                    }}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <div class="form-group">
                                <div class="form-line">
                                    {{ form_row(form.lieuNaissance, {'attr':{'class':"form-control", 'placeholder':"Birth Place", 'require':"", 'label':'Birth Place*'}})
                                    }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-md-6 col-sm-12">
                            <div class="form-group">
                                <div class="form-line">
                                    {{ form_row(form.Domaine, {'attr':{'class':"form-control" ,'placeholder':"Domain", 'require':"", 'label':'Domain*'}})
                                    }}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <div class="form-group drop-custum">
                                {{ form_row(form.diplome, {'attr':{'class':"form-control show-tick" , 'require':"", 'label':'Diploma*'}})
                                }}
                            </div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-md-6 col-sm-12">
                            <div class="form-group">
                                <div class="form-line">
                                    {{ form_row(form.sexe, {'attr':{'class':"form-control", 'require':""}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <div class="form-group">
                                <div class="form-line">
                                    {{ form_row(form.Description, {'attr':{'class':"form-control", 'placeholder':"Description", 'require':"", 'label':'Description*'}})
                                    }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-6 col-md-12 col-sm-12">

                            <div class="card mt-2 " style="height: 200px; margin-left: 300px; border-radius: 5%; ">

                                <div class="body">

                                    <center>
                                        <div class="fallback" style="color: blue;">
                                            {{ form_row(form.imageFile, {'attr':{'class':"form-control-file" }}) }}
                                        </div>
                                    </center>

                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-raised g-bg-blush2">Submit</button>
                        <a href="{{ path('admin_directeur_liste') }}" class="btn btn-raised btn-default">Cancel</a>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}